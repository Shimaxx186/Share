<% posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image %>
    <p>説明：<%= post.contents %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
  <% end %>
  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  
  <span class="name">
    <a href="/users/<%= post.user.id %>">
      <span>投稿者</span><%= post.user.name %>
    </a>
  </span>
      <%= link_to '詳細', post_path(post.id), method: :get %>
      <% if user_signed_in? && @user == current_user %>
      <%= link_to '編集', edit_post_path(post.id), method: :get %>
      <%= link_to '削除', "/posts/#{post.id}", method: :delete %>
      <% end %>
</div>
<% end %>
