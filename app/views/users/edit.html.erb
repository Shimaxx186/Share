<h1 class="index">プロフィール編集</h1>

  <%= form_with model: @user, local: true do |f| %>
    <div class= "user-edit">
      <div class= "user-edit__name" >
      <lavel>ユーザー名</lavel>
      <%= f.text_field :name, autofouce: true, placeholder:"ユーザー名" %>
      </div>
    <div class= "user-edit__pic">
      <lavel>プロフィール画像</lavel><br>
      <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.jpg"%><br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
    <div class= "user-edit__introdction">
      <label>プロフィール</label></br>
      <%= f.text_area :introductions, class: "post_contens", size: "50x10" %><br>
    </div>
    <%= f.submit '保存する', class: "botton-send" %>
    <% end %>
  </br>
  <%= link_to "戻る", user_path(@user.id) %>
  </div>